  <!--
    Substitutions can be by normal text or by regular expressions.
    To use normal text use <from type="normal"> or <from>.
    To use regular expressions use <from type="regex">.
      
    Normal text: the match is case insensitive. The match is only accepted if
    the characters before and after (if any) the input's matching text
    are non-alphanumeric and not apostrophes "'" (ie: [^A-Za-z0-9']).
      
    Regular Expressions: the match is case sensitive and capturing (this
    means you can refer to parethezides parts of the regular expression by
    using \0 (all match) \1-\9 (the rest of the captured matches).
    The regular expressions used are Perl Compatible, so you should read the
    special extensions to POSIX regular expressions this syntax has (man pcre).
      
    When the substitutions are to be applied to an input, every <substitution>
    is applied (in the order they were defined here). If there's match the
    replace is global.
  -->
  <substitutions>
	
  </substitutions>

  <!-- libaiml options -->
  <options>
    <!-- space delimited list of file patterns to load as aiml files. If you
         need to use a space as part of a pattern escape it with '\' -->
    <file_patterns>aiml/*.aiml</file_patterns>
    
    <!-- file used to store data passed to <gossip> tags (defaults to
        "gossip.txt" if not specified -->    
    <file_gossip>gossip.txt</file_gossip>
    
    <!-- file used to mantain the list of registered users and their variables
     (must be readable+writable) (defaults to "userlist.xml" if not specified) -->
    <user_file>userlist.xml</user_file>
    
    <!-- if this tag is present all combinations of space, tab, carriage
      return and linefeed are replace by a single space (HTML-like behavior) -->
    <trim_blanks/>
    
    <!-- the characters used to separate sentences (every character counts
        here!) (defaults to "?!.;" if not specified) -->
    <sentence_limit>?!.;</sentence_limit>
    
    <!-- the <allow> tags specifies some boolean options -->
    <allow>
      <!-- interpret <javascript> tags (libaiml should have been compiled with
      javascrip support --> 
      <javascript/>
      
      <!-- interpret <system> tags -->      
      <system/>
      
      <!-- allow usage of the "format" attribute on <date/> tag -->
      <dateformat/>
    </allow>
  </options>
